function [hlms, h_nn, e_nn] = lms_lab(x,d,hlms,mi);

%Filtr adaptacyjny LMS
%x - sygna³ wejœciowy
%d - sygna³ odniesienia
%hlms - wspó³czynniki filtra
%mi - krok adaptacji, np.0.01
%h_n - kolejne wektory wspó³czynników filtra
%e_n - kolejne wartoœci b³êdu

hlms=hlms
M=length(hlms);
q=zeros(M,1);
h_nn=hlms;
e_nn=[];
for k=1:min([length(x),length(d)])
    q=[q(2:M); x(k)];
    e=d(k)-q'*hlms;
    e_nn=[e_nn e];
    hlms=hlms + mi*q*e;
    h_nn=[h_nn hlms];
   
end



